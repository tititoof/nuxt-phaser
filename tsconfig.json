{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "#app": ["node_modules/nuxt/dist/app"],
            "~/*": ["src/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*", "types/**/*"]
}
