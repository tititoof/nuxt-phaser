{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6",
            "es7",
            "dom",
            "scripthost"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/phaser/types",
            "./node_modules/@nuxt/types/config/plugin.d.ts"
        ],
        "types": [
            "@types/jest",
            "@types/node",
            "phaser"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}