{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "es7",
            "dom",
            "scripthost"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/phaser/types",
            "./types"
        ],
        "types": [
            "@types/jest",
            "@types/node",
            "phaser"
        ]
    }
}